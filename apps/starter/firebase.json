{
  "hosting": [
    {
      "target": "starter",
      "public": "dist",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "storybook",
      "public": "storybook-static",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "site": "gits-ui-components",
      "public": "storybook-static",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    }
  ]
}
